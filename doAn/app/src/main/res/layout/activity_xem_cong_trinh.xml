<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".XemCongTrinh">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công trình"
            android:textSize="25dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/backBtn_XCT"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:src="@drawable/back"/>
    </FrameLayout>

    <TextView
        android:id="@+id/maCongTrinhTv_XCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="Mã công trình: "
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tenCongTrinhTv_XCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="Tên công trình: "
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/diaChiTv_XCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="Địa chỉ: "
        android:textSize="18dp"/>

    <TableLayout
        android:layout_width="339dp"
        android:layout_height="400dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:paddingRight="1dp"
            android:paddingBottom="1dp">>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="Mã Phiếu"
                android:textSize="18dp" />


            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="Ngày Vận Chuyển"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/inBtn_XCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In"/>

        <Button
            android:id="@+id/themPhieuBtn_XCT"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm phiếu"/>
    </LinearLayout>

</LinearLayout>