<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".XemChiTietPhieu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/tenPhieuTv_XCTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phiếu vận chuyển "
            android:textSize="25dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/backImgBtn_XCTP"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:src="@drawable/back"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã công trình: "
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/maCongTrinhTv_XCTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên công trình: "
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tenCongTrinhTv_XCTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/diaChiTv_XCTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>
    </LinearLayout>


    <TableLayout
        android:layout_width="339dp"
        android:layout_height="400dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:stretchColumns="0,1,2,3,4,5">

        <TableRow
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:paddingRight="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="MaVT"
                android:textSize="17dp" />


            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="TenVT"
                android:textSize="17dp" />
            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="DV"
                android:textSize="17dp" />
            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="SL"
                android:textSize="17dp" />
            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cự ly"
                android:textSize="17dp" />
            <TextView
                android:layout_marginLeft="1dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="5dp"
                android:text="Thành tiền"
                android:textSize="17dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/inBtn_XCTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In"/>

        <Button
            android:id="@+id/themPhieuBtn_XCTP"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm phiếu"/>
    </LinearLayout>
</LinearLayout>