<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaPhieuVanChuyen"
    android:padding="10dp">


    <TextView
        android:text="Mã phiếu vận chuyển: "
        android:textSize="16sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="start
"
        />
    <TextView
        android:id="@+id/maPhieuVanChuyenTv_SPVC"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"
        />

    <TextView
        android:text="Mã công trình:"
        android:layout_row="1"
        android:textSize="16sp"
        android:layout_column="0"
        android:layout_gravity="start"
        />

    <TextView
        android:id="@+id/maCongTrinhTv_SPVC"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"

        />

    <TextView
        android:text="Ngày vận chuyển:"
        android:layout_row="2"
        android:textSize="16sp"
        android:layout_column="0"
        android:layout_gravity="start"
        />

    <TextView
        android:id="@+id/ngayVanChuyenTv_SPVC"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"

        />
    <ImageButton
        android:id="@+id/inChiTietPhieuBtn_SPVC"
        android:src="@drawable/print_vector"
        android:layout_column="0"
        android:onClick="inChiTietPhieuVanChuyen"
        android:layout_row="3"
        />
    <ImageButton
        android:id="@+id/themVatTu_SPVC"
        android:layout_row="3"
        android:layout_column="3"
        android:src="@drawable/add_vector"
        android:onClick="themVatTuChiTietPhieu"
        />

    <ListView
        android:id="@+id/danhSachVatTuChiTietPhieuLv_SPVC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/black"
        android:dividerHeight="1dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginTop="20dp"
        >
    </ListView>
</GridLayout>